<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.dts.ladapt.Verificacion.list_adapt_detalle_reemplazo_verif">

    <LinearLayout
        android:id="@+id/linearEncCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_medium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblECodigoRe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Código"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lblEProductoRe"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Nombre"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lblEPresRe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
