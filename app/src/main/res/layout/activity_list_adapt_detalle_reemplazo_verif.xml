            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblELoteRe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Lote"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblECodPrRe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Id Producto Bodega"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblEPesoRe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Peso"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/lblEEstadoRe"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Nom Estado"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblEStock"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Id Stock"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblEDespachar"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Aplica"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

