<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relAdapterDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_adapter_detalle_cambio_ubic">

    <RelativeLayout
        android:id="@+id/relInterDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <HorizontalScrollView
            android:id="@+id/hrSccrollDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearDetalleCB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblTareaDet"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Tarea" />

                <TextView
                    android:id="@+id/lblIdStock"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Stock" />

                <TextView
                    android:id="@+id/lblCodigo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="40037" />

                <TextView
                    android:id="@+id/lblProducto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="42.9 Producto" />

                <TextView
                    android:id="@+id/lblPresentacion"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Caja24" />

                <TextView
                    android:id="@+id/lblOrigen"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="R0 - C0 - TA - N0 - PosA - #0" />

                <TextView
                    android:id="@+id/lblDestino"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="R0 - C0 - TA - N0 - PosA - #0" />

                <TextView
                    android:id="@+id/lblCantidad"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00.00" />

                <TextView
                    android:id="@+id/lblRecibido"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00.00" />

                <TextView
                    android:id="@+id/lblOperador"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Juan" />

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</RelativeLayout>