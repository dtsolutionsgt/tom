<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relAdaptTareas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dts.ladapt.CambioUbicacion.list_view_tareas_cambio_ubic">

    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9CFF9800"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/lblTarea1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="false"
            android:maxLines="1"
            android:text="Tarea"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblMotivo1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Motivo"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblObserva1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Observación"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lblEstado1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Estado"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/encabezado"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/lblTarea"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Tarea"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblMotivo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Motivo"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblObserva"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Observación"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="false"
            android:maxLines="2"
            android:text="Estado"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>